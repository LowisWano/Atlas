generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int @id @default(autoincrement())
  name     String
  email    String
  password_hash String
  player   Player @relation(fields: [playerId], references: [id])
  playerId Int @unique
}

model Player {
  id              Int @id @default(autoincrement())
  user            User?
  level           Int
  experience      Int
  gold            Int
  adventurerRank  Rank
}

enum Rank {
  COPPER
  IRON
  SILVER
  GOLD
  PLATINUM
  MYTHRIL
  ADAMANTITE
}